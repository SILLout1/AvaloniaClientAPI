<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="Win.EditWindow"
        Width="450" Height="480"
        WindowStartupLocation="CenterOwner"
        Title="Редактирование сотрудника"
        Background="#1e1e1e">

    <Border Padding="20" Background="#2b2b2b" CornerRadius="8">
        <StackPanel Spacing="15">

            <TextBlock Text="Редактирование сотрудника"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"/>

            <StackPanel Spacing="10">
                <TextBox x:Name="TbSurname" Watermark="Фамилия" Foreground="White" Background="#3a3a3a"/>
                <TextBox x:Name="TbName" Watermark="Имя" Foreground="White" Background="#3a3a3a"/>
                <TextBox x:Name="TbPatronymic" Watermark="Отчество" Foreground="White" Background="#3a3a3a"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock Text="Дата рождения:" Foreground="White" VerticalAlignment="Center"/>
                <DatePicker x:Name="DpBirthday" Width="150"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock Text="Роль:" Foreground="White" VerticalAlignment="Center"/>
                <ComboBox x:Name="CbRole" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Spacing="15" VerticalAlignment="Center">
                <Border Width="100" Height="100" BorderBrush="#555" BorderThickness="1" Background="#444" CornerRadius="4">
                    <Image x:Name="ImgPhoto" Stretch="UniformToFill"/>
                </Border>
                <Button Content="Выбрать фото" Width="140" Height="40" Background="#007bff" Foreground="White" Click="BtnSelectPhoto_Click"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Сохранить" Width="120" Height="40" Background="#28a745" Foreground="White" Click="BtnSave_Click"/>
            </StackPanel>

        </StackPanel>
    </Border>
</Window>
