<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Win.AddWindow"
        Width="400" Height="350"
        WindowStartupLocation="CenterOwner"
        Title="Добавление сотрудника">

  <StackPanel Margin="15" Spacing="10">

    <TextBlock Text="Добавление сотрудника" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>

    <TextBox x:Name="TbSurname" Watermark="Фамилия"/>
    <TextBox x:Name="TbName" Watermark="Имя"/>
    <TextBox x:Name="TbPatronymic" Watermark="Отчество"/>

    <DatePicker x:Name="DpBirthday"/>

    <ComboBox x:Name="CbRole"/>

    <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right" Margin="0,15,0,0">
      <Button Content="Сохранить" Width="100" Click="BtnSave_Click"/>
      <Button Content="Отмена" Width="100" Click="BtnCancel_Click"/>
    </StackPanel>
  </StackPanel>
</Window>
